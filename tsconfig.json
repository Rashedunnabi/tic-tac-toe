{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@screens": ["src/screens"],
            "@components": ["src/components"],
            "@utils": ["src/utils"],
            "@config/*": ["src/config/*"],
            "@contexts/*": ["src/contexts/*"],
            "@assets/*": ["src/assets/*"]
        }
    }
}
